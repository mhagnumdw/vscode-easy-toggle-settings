{
  "name": "dw-toggle-settings",
  "displayName": "dw-toggle-settings",
  "description": "Permite alterar entre configurações do vscode pela barra de status",
  "version": "0.0.1",
  "publisher": "dw",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Toggle Settings",
      "properties": {
        "toggleSettings.items": {
          "type": "array",
          "description": "Lista de propriedades do VSCode a serem alternadas com seus ícones e valores",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "property": {
                "type": "string",
                "description": "Nome completo da configuração (ex: editor.codeLens)"
              },
              "icon": {
                "type": "string",
                "description": "Nome do ícone Codicon (ex: eye, settings, debug)"
              },
              "values": {
                "type": "array",
                "description": "Lista de valores possíveis para essa configuração",
                "items": {},
                "uniqueItems": true,
                "minItems": 2
              }
            },
            "required": ["property", "icon", "values"]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
